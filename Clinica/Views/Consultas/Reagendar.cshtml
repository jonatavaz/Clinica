@model Clinica.Models.CreateConsultaViewModel

<h2>Reagendar Consulta</h2>

<form asp-action="Reagendar" method="post">
    <input type="hidden" asp-for="Consulta.Id" />
    <div>
        <label>Paciente</label>
        <select asp-for="Consulta.PacienteId" asp-items="@(new SelectList(Model.Pacientes, "Id", "Nome", Model.Consulta.PacienteId))"></select>
    </div>
    <div>
        <label>Médico</label>
        <select asp-for="Consulta.MedicoId" asp-items="@(new SelectList(Model.Medicos, "Id", "Nome", Model.Consulta.MedicoId))"></select>
    </div>
    <div>
        <label>Data e Hora</label>
        <input asp-for="Consulta.DataHora" type="datetime-local" value="@Model.Consulta.DataHora.ToString("yyyy-MM-ddTHH:mm")" />
    </div>
    <button type="submit">Reagendar</button>
</form>

<a asp-action="Index">Voltar</a>
