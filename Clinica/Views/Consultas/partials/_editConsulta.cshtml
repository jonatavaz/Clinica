@model Clinica.ViewModels.CreateConsultaViewModel

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Consulta.Id" />
    <div>
        <label asp-for="Consulta.PacienteId">Paciente</label>
        <select asp-for="Consulta.PacienteId" asp-items="@(new SelectList(Model.Pacientes, "Id", "Nome"))"></select>
    </div>
    <div>
        <label asp-for="Consulta.MedicoId">Médico</label>
        <select asp-for="Consulta.MedicoId" asp-items="@(new SelectList(Model.Medicos, "Id", "Nome"))"></select>
    </div>
    <div>
        <label asp-for="Consulta.DataHora">Data e Hora</label>
        <input type="datetime-local" asp-for="Consulta.DataHora" />
    </div>
    <button type="submit">Salvar</button>
</form>
